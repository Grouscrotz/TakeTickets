<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние, когда элемент выбран -->
    <item android:state_selected="true" android:drawable="@color/coral"/>
    <!-- Состояние, когда элемент доступен, но не выбран -->
    <item android:state_enabled="true" android:drawable="@color/olive_grab"/>
    <!-- Состояние, когда элемент недоступен -->
    <item android:state_enabled="false" android:drawable="@color/light_gray"/>
    <item android:drawable="@color/olive_grab"/>

</selector>
