<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/regImage"
        android:layout_width="350dp"
        android:layout_height="296dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/registr" />

    <EditText
        android:id="@+id/editTextLoginEmailSignUp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:hint="Email"
        android:backgroundTint="@color/coral"
        android:drawableStart="@drawable/ic_email"
        android:paddingStart="2dp"
        android:paddingLeft="5dp"
        android:drawablePadding="10dp" />

    <EditText
        android:id="@+id/editTextUserNameSignUp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:hint="Имя пользователя"
        android:backgroundTint="@color/coral"
        android:drawableStart="@drawable/ic_username"
        android:paddingStart="2dp"
        android:paddingLeft="5dp"
        android:drawablePadding="10dp"
        />

    <EditText
        android:id="@+id/editTextLoginPasswordSignUp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:hint="Пароль"
        android:backgroundTint="@color/coral"
        android:drawableStart="@drawable/ic_password"
        android:paddingStart="4dp"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp" />

    <Button
        android:id="@+id/registrationButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/coral"
        android:fontFamily="sans-serif-medium"
        android:onClick="registration_account"
        android:text="Зарегистрироваться"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewWithoutAccount"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Уже есть аккаунт?"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <Button
            android:id="@+id/logButton"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:background="@android:color/transparent"
            android:onClick="toLogin"
            android:text="Войти в аккаунт"
            android:textAllCaps="false"
            android:textColor="@color/coral"
            android:textSize="12dp" />

    </LinearLayout>

</LinearLayout>
